@model ContactViewModel
@{
    ViewBag.Title = "Contact";
}
@section Scripts { 
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">

            @* Wyświetli errory z ModelState *@
            <div asp-validation-summary="ModelOnly"></div>
            <div form-group>
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>
            <div form-group>
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control"/>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div form-group>
                <label asp-for="Subject">Subject:</label>
                <input asp-for="Subject" type="text" class="form-control"/>
                <span asp-validation-for="Subject" class="text-warning"></span>
            </div>
            <div form-group>
                <label asp-for="Message">Message:</label>
                <textarea asp-for="Message" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-warning"></span>
            </div>
            <br />
            <div form-group>
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-envelope"></i> Send</button>
                <div>@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>