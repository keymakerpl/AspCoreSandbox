
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            @* Wyświetl błędy walidacji tylko dla modelu LoginViewModel *@
            <div asp-validation-summary="ModelOnly"></div> 
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-warning"></span>
                @* asp-validaion-for wyświetl błędy dla określonego propertisa *@
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control"/>
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div form-check>
                    <input asp-for="RemeberMe" type="checkbox" class="checkbox-inline"/>
                    <label asp-for="RemeberMe">RemeberMe?</label>
                    <span asp-validation-for="RemeberMe" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>